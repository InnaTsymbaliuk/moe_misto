<% if params[:profile] == 'true' %>
  $("#user_tab_content").html("<%= j render('edit_profile') %>");
  $(".confirmed_photo").removeClass("active");
  $(".uploaded_photo").removeClass("active");
  $(".user_message").removeClass("active");
  $(".edit_profile").addClass("active");
